#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;

float potencial(float b,float e)
{
	
	float i,p=1;
	for(i=1;i<=e;i++)
	{
		p=p*b;
	}
	return p;
}

void main()
{	float base,exp;
	int copiae; 
	cout<<"ingrese base: ";
	cin>>base;
	do
	{
		cout<<"ingrese exponente entero: ";
		cin>>exp;
		copiae=exp;
	}
	while(((exp-copiae)!=0)||(exp<0));
	cout<<"La potencia del numero es: "<<potencial(base,exp);
	getch();
}

