#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include <string>
#define MAX 100
#define fil 10
#define col 10

using namespace std;

struct elem
{
	string svec[MAX];
};

void cargarvecdevec(elem V[],int n);
void llenar(elem M[fil][col],int n,elem V[MAX]);
void mostrar(elem M[fil][col],int n);

void main()
{elem V[MAX],M[fil][col];
int n;
	cout<<"Ingrese tamaÃ±o del vector: ";
	cin>>n;
	cargarvecdevec(V,n);
	llenar(M,n,V);
	mostrar(M,n);
	getch();
}

void cargarvecdevec(elem V[],int n)
{int i,j;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			cout<<"Ingrese elemento ["<<i<<"]["<<j<<"]: ";
			cin>>V[i].svec[j];
		}
	}
}

void llenar(elem M[fil][col],int n,elem V[MAX])
{int i,j,k;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			for(k=0;k<n;k++)
			{
				M[i][j].svec[k]=V[i].svec[j];
			}
		}
	}
}

void mostrar(elem M[fil][col],int n)
{int i,j,k;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			for(k=0;k<n;k++)
			{
				cout<<M[i][j].svec[k]<<" ";
			}
		cout<<" ";
		}
	cout<<endl;
	}
}
